@model Pizze

@{
    ViewData["Title"] = "Crea la tua pizza";
    Layout = "_PizzeriaLayout";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-8 text-center">
            <h2>Crea la <span class="text-danger">tua pizza</span> che preferisci</h2>

            <form asp-controller="Profile" asp-action="Create" method="post">
                @Html.AntiForgeryToken()
                <div class="mb-3">
                    <strong>Nome:</strong>
                    <input asp-for="Name" class="d-block w-100" />
                </div>
                <div class="mb-3">
                    <strong>Cognome:</strong>
                    <input asp-for="Description" class="d-block w-100" />
                </div>
                <div class="mb-3">
                    <strong>Età:</strong>
                    <input asp-for="Img" class="d-block w-100" />
                </div>
                <div class="mb-3">
                    <strong>Età:</strong>
                    <input asp-for="Price" class="d-block w-100" />
                </div>
                <div class="text-center">
                    <input type="submit" class="btn btn-success" value="Crea ora!">
                </div>
            </form>
        </div>
        <div class="col-12 mb-5 text-center">
            <a href="@Url.Action("Index", "Pizza")" class="btn btn-primary">Torna all'elenco di tutte le pizze</a>
            <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Ricomincia dalla Home</a>
        </div>
    </div>
    
</div>
